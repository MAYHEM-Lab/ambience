dir=`dirname "$0"`

qemu=qemu-system-i386

# select the program
elf="$1"
shift

# Map stdio to a multiplexed character device so we can use it
# for the monitor and semihosting output

chardev=stdio,mux=on,id=stdio0

# Point the semihosting driver at our new chardev

semi=enable=on,chardev=stdio0

input=""

case "$1" in
    -*|"")
	;;
    *)
	semi="$semi",arg="$1"
	input="$1"
	shift
	;;
esac

$dir/monitor-e9 $qemu \
	-cpu core2duo \
	-bios semihost/machine/i386/bios.bin \
	-monitor none \
	-serial none \
	-debugcon stdio \
	-nic none \
	-device loader,file="$elf" \
	-nographic \
	"$@" < /dev/null
